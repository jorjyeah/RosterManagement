<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_event_layout"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".AddEventActivity">
    <TableLayout
        android:id="@+id/tableatas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_height="wrap_content">
            <TextView
                android:text="Name"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/eventName"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content">
            <TextView
                android:text="Date"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/dateText"
                android:onClick="showDatePickerDialog"
                android:layout_width="0dp"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content">
            <TextView
                android:text="Shift"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/timeText"
                android:onClick="showTimePickerDialog"
                android:layout_width="0dp"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content">
            <TextView
                android:text="Team Manager Photographers"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/tmphotospinner"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content">
            <TextView
                android:text="Team Manager Campers"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/tmcampersspinner"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content">
            <TextView
                android:text="Team Manager PostPro"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <Spinner
                android:id="@+id/tmpostprospinner"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/jobrecycler"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="175dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/ok_button"
                android:textColor="#ffffff"
                android:backgroundTint="@color/colorPrimaryLight"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ok" />
            <Button
                android:id="@+id/cancel_button"
                android:textColor="#ffffff"
                android:backgroundTint="@color/colorPrimaryLight"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="cancel" />
        </TableRow>
    </TableLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addeventfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|bottom"
        android:src="@drawable/plus"
        android:tint="#ffffff"
        android:layout_margin="16dp" />
</RelativeLayout>